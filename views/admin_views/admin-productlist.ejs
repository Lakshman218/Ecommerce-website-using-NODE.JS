                <div class="container">
                    <!-- <h3>Product List</h3> -->
                    <table class="table table-striped" id="productList">
                        <thead>
                            <tr>
                                <th scope="col">Photo</th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Category</th>
                                <th scope="col">Brand</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% productdata.reverse().forEach(product => { %> 
                                <tr>
                                    <td><img src="/<%= product.productImg[0] %>" class="img-sm " alt="Item" height="68" width="68"></td>
                                    <td><%= product.productName %></td>
                                    <td>₹<%= product.sellingPrice %></td>
                                    <td><%= product.productCategory %></td>
                                    <td><%= product.productBrand %></td>
                                    <% if (product.productStock===0){%>
                                        <td style="color: red;">Out of stock</td>
                                    <%}else{%>
                                        <td><%= product.productStock %></td>
                                    <% }%>
                                    <td>
                                        <a href="/admin/edit-product/<%= product._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                            <i class="material-icons md-edit"></i> Edit
                                        </a>
                                        <!-- <a href="/admin/delete-product/<%= product._id %>" class="btn btn-sm font-sm btn-light rounded">
                                            <i class="material-icons md-delete_forever"></i> Delete
                                        </a> -->
                                        <% if(product.productStatus === 'Unblock') {%>
                                            <a href="#" data-action="/admin/block-product/<%= product._id %>" class="btn btn-primary block-unblock-btn">Block</a>
                                        <%} else if (product.productStatus === 'Block') {%> 
                                            <a href="#" data-action="/admin/unblock-product/<%= product._id %>" class="btn btn-danger block-unblock-btn" style="background-color: #b61300; color: #fff;">Unblock</a>
                                        <%} %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                        <script>
                            document.addEventListener('DOMContentLoaded', function() {
                                const blockUnblockBtns = document.querySelectorAll('.block-unblock-btn');
                            
                                blockUnblockBtns.forEach(btn => {
                                    btn.addEventListener('click', function(event) {
                                        event.preventDefault();
                            
                                        const action = this.getAttribute('data-action');
                            
                                        Swal.fire({
                                            title: 'Are you sure?',
                                            text: "",
                                            icon: 'warning',
                                            showCancelButton: true,
                                            confirmButtonColor: '#3085d6',
                                            cancelButtonColor: '#d33',
                                            confirmButtonText: 'Yes, proceed!'
                                        }).then((result) => {
                                            if (result.isConfirmed) {
                                                window.location.href = action;
                                            }
                                        });
                                    });
                                });
                            });
                        </script>
                    </table>
